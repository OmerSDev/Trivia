<Window x:Class="WpfApp1.WaitingRoom"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="WaitingRoom" Height="450" Width="800">
    <Grid>
        <ListBox x:Name="playersList" d:ItemsSource="{d:SampleData ItemCount=0}" Margin="250,279,250,44" />

        <TextBlock x:Name="playersText" HorizontalAlignment="Center" Margin="0,238,0,0" TextWrapping="Wrap" Text="Players in room:" VerticalAlignment="Top" Width="240" Height="28" FontSize="24" FontFamily="Arial Black"/>
        <Button x:Name="ExitBTN" Content="Exit Room" HorizontalAlignment="Left" Margin="595,148,0,0" VerticalAlignment="Top" Height="38" Width="175" Background="Black" Foreground="White" FontFamily="Segoe UI Black" FontSize="18" BorderBrush="#FF545454" BorderThickness="1,1,1,1" RenderTransformOrigin="0.5,0.5" Click="ExitBTN_Click">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0"/>
                    <TranslateTransform X="0"/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
        <TextBlock x:Name="answerTimeoutText" HorizontalAlignment="Left" Margin="55,62,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="42" Width="315" FontWeight="Bold" FontSize="22"/>
        <TextBlock x:Name="questionCountText" HorizontalAlignment="Left" Margin="400,62,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="42" Width="324" FontWeight="Bold" FontSize="22"/>


    </Grid>
</Window>
