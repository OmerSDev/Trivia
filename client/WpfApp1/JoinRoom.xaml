<Window x:Class="WpfApp1.JoinRoom"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="JoinRoom" Height="450" Width="800">
    <Grid>
        <ListBox x:Name="roomList" d:ItemsSource="{d:SampleData ItemCount=0}" Margin="250,80,250,277" SelectionChanged="roomList_SelectionChanged"/>
        <ListBox x:Name="playerList" d:ItemsSource="{d:SampleData ItemCount=0}" Margin="250,229,250,94" Visibility="Hidden"/>
        <TextBlock HorizontalAlignment="Center" Margin="0,47,0,0" TextWrapping="Wrap" Text="Room List:" VerticalAlignment="Top" Width="164" Height="28" FontSize="24" FontFamily="Arial Black"/>
        <TextBlock x:Name="playerText" HorizontalAlignment="Center" Margin="0,189,0,0" TextWrapping="Wrap" Text="Players in room:" VerticalAlignment="Top" Width="240" Height="28" FontSize="24" FontFamily="Arial Black" Visibility="Hidden"/>
        <Button x:Name="RefreshBTN" Content="Refresh room list" HorizontalAlignment="Left" Margin="595,148,0,0" VerticalAlignment="Top" Height="38" Width="175" Background="Black" Foreground="White" FontFamily="Segoe UI Black" FontSize="18" BorderBrush="#FF545454" BorderThickness="1,1,1,1" RenderTransformOrigin="0.5,0.5" Click="RefreshBTN_Click">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0"/>
                    <TranslateTransform X="0"/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
        <Button x:Name="EnterRoomBTN" Content="Join" HorizontalAlignment="Left" Margin="642,217,0,0" VerticalAlignment="Top" Height="43" Width="82" Background="Black" Foreground="White" FontFamily="Segoe UI Black" FontSize="18" Click="EnterRoomBTN_Click"/>
        <Button x:Name="BackBTN" Content="Go back" HorizontalAlignment="Left" Margin="20,379,0,0" VerticalAlignment="Top" Height="38" Width="80" Foreground="#FF575CAD" BorderBrush="White" Background="White" FontSize="18" FontFamily="Segoe UI Black" Click="BackBTN_Click"/>

    </Grid>
</Window>
