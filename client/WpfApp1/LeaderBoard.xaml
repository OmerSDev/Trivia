<Window x:Class="WpfApp1.LeaderBoard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="LeaderBoard" Height="450" Width="800">
    <Grid>
        <TextBlock HorizontalAlignment="Center" Margin="0,33,0,0" TextWrapping="Wrap" Text="Leaderboard:" VerticalAlignment="Top" Width="246" Height="66" FontSize="36" FontFamily="Segoe UI Black"/>
        <TextBlock x:Name="leaderboards" HorizontalAlignment="Center" Margin="0,152,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="232" Height="252" FontSize="20" FontFamily="Segoe UI Black"/>
        <Button x:Name="BackBTN" Content="Go back" HorizontalAlignment="Left" Margin="20,379,0,0" VerticalAlignment="Top" Height="38" Width="80" Foreground="#FF575CAD" BorderBrush="White" Background="White" FontSize="18" FontFamily="Segoe UI Black" Click="BackBTN_Click"/>

    </Grid>
</Window>
